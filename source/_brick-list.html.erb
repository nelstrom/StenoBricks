<table class="brick-list">

  <tr>
    <td>identifier</td>
    <td>input</td>
    <td>label</td>
  </tr>

  <% bricks.each do |brick| %>
    <% brick = Steno::Brick.new(brick.id, brick.label, brick.keystrokes) %>
    <tr>
      <td><%= link_to brick.id, "#{rootpath}/bricks/#{brick.id}/" %></td>
      <td><%= brick.notation(mapper) %></td>
      <td><%= brick.label %></td>
    </tr>
  <% end %>

</table>
