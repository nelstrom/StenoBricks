<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <% if defined?(brick) %>
      <title><%= current_page.data.title %>: <%= brick.label %></title>
    <% elsif defined?(definition) %>
      <title><%= (definition.notation).upcase %>: <%= definition.output %></title>
    <% else %>
      <title><%= current_page.data.title %></title>
    <% end %>

    <%= stylesheet_link_tag "foundation", "app" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <%= javascript_include_tag 'vendor/jquery.min', 'vendor/what-input.min', 'foundation.min', 'app' %>
  </body>
</html>
